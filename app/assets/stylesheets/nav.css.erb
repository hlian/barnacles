/* -*- mode: css -*- */

nav {
    width: 200px;
    float: left;
    margin-right: -200px;
    margin-left: -250px;
    color: white;
    filter: drop-shadow(1.5px 1.5px 1px #9cc);
    text-align: right;
    font-size: 0.9rem;
}

nav #l_holder {
    background: transparent url(<%= asset_path 'barn-icon.png' %>);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 32px 32px;
    display: inline-block;
    width: 32px;
    height: 32px;
    padding: 1px;
    margin-left: 4px;
    margin-right: 11px;
}

nav h1 a {
}

nav a {
    color: white;
    text-decoration: none;
    border: 1px dashed transparent;
}

nav a {
    text-decoration: none;
    display: block;
    padding: 1px 5px;
}

nav  a.cur_url {
    font-weight: bold;
    border: 1px dashed white;
}

.headerlinks a:focus, .headerlinks a:active {
    border: 1px solid fuchsia;
}

nav a.new_messages {
    -webkit-animation: glow 3s ease-out infinite alternate;
}

@-webkit-keyframes glow {
    from {
        text-shadow: 0px 0px 10px #17B2FF;
    }
    to {
        text-shadow: 0px 0px 30px #17B2FF;
    }
}


@media only screen and (max-width: 480px) {
	div#header,
	div#leader {
		margin: 0;
		padding: 8px 5px;
		background-color: #eee;
		border-bottom: 1px solid #ccc;
	}
	div#leader {
		padding: 8px;
        font-size: 0.8rem;
	}

	div#leader.guess input[type="submit"] {
	    display: none;
	}

	div#leader.guess input[type="input"] {
        font-size: 0.8rem;
	    width: 100%;
	}

    nav {
        float: none;
        width: auto;
        margin: 0;
        filter: none;
    }

    nav a {
        color: black;
        display: inline-block;
        font-size: 0.8rem;
        padding: 0;
    }

    nav #l_holder {
        width: 16px;
        height: 16px;
        background-size: 16px 16px;
    }
}
