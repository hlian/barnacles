.spoiler {
    outline: 2px dashed #c99;
}

.spoiler:before {
    content: "\1f575  [mouse charade]";
    font-size: 0.5rem;
    float: right;
    display: block;
    margin-left: -100%;
    padding-right: 5px;
}

.spoiler * {
    visibility: hidden;
}

.spoiler:hover * {
    visibility: visible;
}
